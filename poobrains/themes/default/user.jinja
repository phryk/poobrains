{% extends "named.jinja" %}

{% block content %}
{% if content.offset == 0 %}
    {{ content.about.render() }}
{% endif %}
{% endblock %}

{% block footer %}
{% if content.offset == 0 %}
    {{ super() }}
{% endif %}
{% endblock %}

{% block post %}

<ul class="listing">
    {% for item in content.profile_posts %}
        <li>{{ item.render('teaser') }}</li>
    {% endfor %}
</ul>

{% if content.profile_pagination.menu %}
    {{ content.profile_pagination.menu.render() }}
{% endif %}

{% endblock %}

