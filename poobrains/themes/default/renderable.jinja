<article class="content-type-{{ content.__class__.__name__.lower() }} mode-{{ mode }} {{ content.css_class }}">
    
    {% if self.header()|trim %}
        <header>
        {% block header %}
            {% if mode != 'full' %}
                {% with url = content.url('full', quiet=True) %}
                    {% if url %}
                        <h2><a href="{{ url }}">{{ content.title }}</a></h2>
                    {% else %}
                        <h2>{{ content.title }}</h2>
                    {% endif %}
                {% endwith %}
            {% endif %}
        {% endblock %}
        </header>
    {% endif %}
    
    <div class="content">
    {% block content %}
        This is the ultimate fallback template. Somebody probably ought to implement one of these templates:
        <ul>
            {% for template in content.templates() %}
                <li>{{ template }}</li>
            {% endfor %}
        </ul>
    {% endblock %}
    </div>

    {% if self.footer()|trim %}
    <footer>
        {% block footer %}{% endblock %}
    </footer>
    {% endif %}
</article>

{% block post %}{% endblock %}
