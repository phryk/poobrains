<form name="{{ content.name }}" method="{{ content.method }}" {% if content.action %}action="{{ content.action }}"{% endif %}>

{% for field in content %}
    {{ field.render() }}
{% endfor %}

{% if content.controls %}
    <ul class="controls">
        {% for control in content.controls %}
            <li>{{ control.render() }}</li>
        {% endfor %}
    </ul>
{% endif %}

</form>
