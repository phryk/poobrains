<form
    id="{{ content.ref_id }}"
    method="{{ content.method }}"
    {% if content.action %}action="{{ content.action }}"{% endif %}
    enctype="multipart/form-data" >

{% block header %}{%endblock%}

<div class="content">
{% block fields %}
    {% for field in content %}
        {{ field.render() }}
    {% endfor %}
{% endblock %}
</div>

<footer>
{% block footer %}
    {{ content.render_controls() }}
{% endblock %}
</footer>

</form>
