{% if config.DEBUG %}<span class="debug-hint" title="{{ self }}">?</span>{% endif %}

<div class="field {{ content.__class__.__name__.lower() }}">

    <label>{% if content.label %}{{ content.label }}{% endif %}
        {% for choice, label in content.choices %}
            <label for="{{ content.ref_id }}-{{ content.value_string(choice) }}">{{ label }}
                <input id="{{ content.ref_id }}-{{ content.value_string(choice) }}" type="radio" name="{{ content.prefix }}.{{ content.name }}" value="{{ content.value_string(choice) }}" />
            </label>
        {% endfor %}
    </label>

    {% if self.help()|trim %}
    {% block help %}
        {% if content.help_text %}
           <span class="help">{{ content.help_text }}</span> 
        {% endif %}
    {% endblock %}
    {% endif %}

</div>
