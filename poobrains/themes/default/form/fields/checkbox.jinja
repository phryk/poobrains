<label for="{{ content.prefix }}.{{ content.name }}">{{ content.label }}</label>
<input
    type="checkbox"
    name="{{content.prefix}}.{{ content.name }}"
    {% if content.errors %}class="invalid"{% endif %}

    {% if content.readonly %}readonly{% endif %}

    {% if content.form %}
        form="{{ content.form.ref_id }}"
    {% endif %}

    {% if content.placeholder %}
        placeholder="{{ content.placeholder }}"
    {% endif %}

    {% if content.value == True %}
        value = "1"
    {% else %}
        value="{{ content.value }}"
    {% endif %}

    {% if content.value %}
        checked
    {% endif %}
>
