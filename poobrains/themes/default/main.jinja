<!doctype html>
<html lang="en">
    <head>
        {% include 'head.jinja' %}
    </head>
    
    <body title="Did YOU know that starting with HTML5 you can put the title attribute on EVERYTHING!?">

        {% if g.boxes.dashbar %}
            {{ g.boxes.dashbar.render() }}
        {% endif %}

        <header>
            {% include 'header.jinja' %}
        </header>
        <main>
            <header>

                {% block breadcrumb %}{% if g.boxes['breadcrumb'] %}{{ g.boxes['breadcrumb'].render() }}{% endif %}{% endblock %}

                <h1 title="{{ g.title }}">{{ g.title }}</h1>

                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        <ul class="messages">
                            {% for category, message in messages %}
                                <li class="{{ category }}">{{ message }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endwith %}

                {% if g.content.menu_actions %}
                    {{ g.content.menu_actions.render() }}
                {% endif %}

                {% if g.content.menu_related %}
                    {{ g.content.menu_related.render() }}
                {% endif %}

            </header>
            <section id="content">
                {{ content.render(mode) }}
            </section>
            <footer>
                {% include 'footer.jinja' %}
            </footer>
        </main>
    </body>
</html>
