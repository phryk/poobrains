{% extends "renderable.jinja" %}


{% block header %}{% endblock %}


{% block content %}

    {% if content.items|length %}

        <ul class="{{ content.__class__.__name__.lower() }}">
            {% for item in content.items %}
                <li>{{ item.render(content.mode) }}</li>
            {% endfor %}
        </ul>


    {% else %}
        <article>
            <div class="content">
                <p>You have entered the {{ content.cls.__name__ }} crypt. It is empty, save for some cobwebs.</p>
            </div>
        </article>
    {% endif %}

{% endblock %}


{% block footer %}
    {% if content.pagination %}
        {{ content.pagination.render(content.mode) }}
    {% endif %}
{% endblock %}
